<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp">

    <RadioGroup
        android:id="@+id/pinTypeRadioGroupV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/blinkRadioBtnV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="radio_blinkV"
            android:text="BLINK" />

        <RadioButton
            android:id="@+id/switchRadioBtnV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="radio_switchV"
            android:text="SWITCH" />

        <RadioButton
            android:id="@+id/pwmRadioBtnV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="radio_pwmV"
            android:text="PWM" />

        <RadioButton
            android:id="@+id/inputRadioBtnV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="radio_inputV"
            android:text="INPUT" />

    </RadioGroup>

    <EditText
        android:id="@+id/frequencyEditV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="frequency"
        app:layout_constraintStart_toStartOf="@+id/pinTypeRadioGroupV"
        app:layout_constraintTop_toBottomOf="@+id/pinTypeRadioGroupV" />

</androidx.constraintlayout.widget.ConstraintLayout>