<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/selectedPinV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroupV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectedPinV">

        <RadioButton
            android:id="@+id/radio_blinkV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="radio_blinkV"
            android:text="BLINK" />

        <RadioButton
            android:id="@+id/radio_switchV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="radio_switchV"
            android:text="SWITCH" />

        <RadioButton
            android:id="@+id/radio_pwmV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="radio_pwmV"
            android:text="PWM" />

        <RadioButton
            android:id="@+id/radio_inputV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="radio_inputV"
            android:text="INPUT" />

    </RadioGroup>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupV">


        <LinearLayout
            android:id="@+id/blinkContainerV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/blinkIntervalV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="5"
                android:hint="interval"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/blinkCountV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="5"
                android:hint="count"
                android:inputType="numberDecimal" />

            <Button
                android:id="@+id/blinkStartV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Start" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/switchContainerV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">


            <Switch
                android:id="@+id/switchV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ON / OFF" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/pwmContainerV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/pwmDutyCycleV"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp" />

            <EditText
                android:id="@+id/frequencyEditV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="frequency" />
        </LinearLayout>

        <Button
            android:id="@+id/stopV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Stop" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pinListV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@tools:sample/full_names" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>